<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTenBanAn_HienThi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize18"
        android:textStyle="bold"
        android:text="Tên Bàn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding5dp"
        />

    <ImageView
        android:id="@+id/imgBanAn_HienThi"
        android:layout_width="@dimen/size100"
        android:layout_height="@dimen/size100"
        android:src="@drawable/banan"
        android:layout_below="@+id/tvTenBanAn_HienThi"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imgBanAn_HienThi"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/btnHuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anbutton"
            android:layout_margin="@dimen/padding5dp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/btnGoiMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/goimon"
            android:layout_below="@+id/imgBanAn"
            android:layout_toRightOf="@+id/btnHuy"
            android:layout_margin="@dimen/padding5dp"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/btnThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thanhtoan"
            android:layout_below="@+id/imgBanAn"
            android:layout_toRightOf="@+id/btnGoiMon"
            android:layout_margin="@dimen/padding5dp"
            android:visibility="invisible"/>
    </LinearLayout>



</RelativeLayout>