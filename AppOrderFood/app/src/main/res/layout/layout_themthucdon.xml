<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/themthucdon"
        android:textStyle="bold"
        android:textSize="@dimen/textsize20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_margin="@dimen/padding10dp">
            <EditText
                android:id="@+id/edtThemMonAn_ThemThucDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintThemMonAn"
                android:layout_marginBottom="@dimen/padding10dp"/>
            <EditText
                android:id="@+id/edtGiaTien_ThemThucDon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hintGiaTien"
                android:layout_marginBottom="@dimen/padding10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <Spinner
                    android:id="@+id/spinLoaiThucDon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="@dimen/padding10dp"/>
                <ImageButton
                    android:id="@+id/ibtnThemLoaiThucDon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_input_add"
                    android:layout_weight="1"
                    android:padding="@dimen/padding10dp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgHinhMonAn_ThemThucDon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/backgroundheader1"
            android:scaleType="centerCrop"
            android:layout_margin="@dimen/padding10dp"
            android:paddingBottom="@dimen/padding20dp"
            android:paddingTop="@dimen/padding20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnDongY_ThemThucDon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dongy"
            android:textColor="@color/colorBackGroundWhite"
            android:background="@color/colorBtnDongY"
            android:layout_margin="@dimen/padding10dp"/>
        <Button
            android:id="@+id/btnThoat_ThemThucDon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thoat"
            android:textColor="@color/colorBackGroundWhite"
            android:background="@color/colorBtnThoat"
            android:layout_margin="@dimen/padding10dp"/>
    </LinearLayout>

</LinearLayout>